<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <!-- 实心 -->
            <solid android:color="#06a15a" />
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>

            <!-- 实心 -->
            <solid android:color="#06c15a" />
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />
        </shape>
    </item>

</selector>