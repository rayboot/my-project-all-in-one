<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/llTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onVoice"
            android:text="发音" />

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:onClick="onFinish"
            android:text="完成" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onShowHelp"
            android:text="求助" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llTemp" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000000"
                        android:textSize="@dimen/main_pinyin_size" />

                    <EditText
                        android:id="@+id/et1"
                        android:layout_width="@dimen/main_rect_bg"
                        android:layout_height="@dimen/main_rect_bg"
                        android:background="@drawable/et_bg"
                        android:ems="1"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:lines="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textSize="@dimen/main_rect_text_size" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000000"
                        android:textSize="@dimen/main_pinyin_size" />

                    <EditText
                        android:id="@+id/et2"
                        android:layout_width="@dimen/main_rect_bg"
                        android:layout_height="@dimen/main_rect_bg"
                        android:background="@drawable/et_bg"
                        android:ems="1"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:lines="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textSize="@dimen/main_rect_text_size"  />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000000"
                        android:textSize="@dimen/main_pinyin_size"  />

                    <EditText
                        android:id="@+id/et3"
                        android:layout_width="@dimen/main_rect_bg"
                        android:layout_height="@dimen/main_rect_bg"
                        android:background="@drawable/et_bg"
                        android:ems="1"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:lines="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textSize="@dimen/main_rect_text_size"  />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000000"
                        android:textSize="@dimen/main_pinyin_size"  />

                    <EditText
                        android:id="@+id/et4"
                        android:layout_width="@dimen/main_rect_bg"
                        android:layout_height="@dimen/main_rect_bg"
                        android:background="@drawable/et_bg"
                        android:ems="1"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:lines="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textSize="@dimen/main_rect_text_size"  />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="" />

</RelativeLayout>