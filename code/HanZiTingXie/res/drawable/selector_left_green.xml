<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#00a642" />
            <corners android:bottomRightRadius="5dp" android:bottomLeftRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0f8633" />
            <corners android:bottomRightRadius="5dp" android:bottomLeftRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape>
    </item>
</selector>