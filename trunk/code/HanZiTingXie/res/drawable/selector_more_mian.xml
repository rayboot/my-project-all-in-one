<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <solid android:color="#1075cf" />
            <corners android:radius="5dp" />
            <stroke
                android:width="1px"
                android:color="#1075ff" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>

            <solid android:color="#02a8fe" />
            <corners android:radius="5dp" />
            <stroke
                android:width="1px"
                android:color="#1075c3" />
        </shape>
    </item>
</selector>