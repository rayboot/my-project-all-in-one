<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <solid android:color="#990030" />
            <corners android:radius="3dp" />
            <stroke
                android:width="1px"
                android:color="#880c0c" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>

            <solid android:color="#e83030" />
            <corners android:radius="3dp" />
            <stroke
                android:width="1px"
                android:color="#af0c0c" />
        </shape>
    </item>
</selector>