<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <solid android:color="#007643" />
            <corners android:radius="3dp" />
            <stroke
                android:width="1px"
                android:color="#0f8633" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>

            <solid android:color="#0ea643" />
            <corners android:radius="3dp" />
            <stroke
                android:width="1px"
                android:color="#068633" />
        </shape>
    </item>
</selector>